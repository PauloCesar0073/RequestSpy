{
  "manifest_version": 3,
  "name": "RequestSpy",
  "version": "1.0",
  "icons": {
    "128": "ativo.png"
  },
  "description": "Bisbilhotar as requisições feitas pelo navegador.",
  "author": "Usuário sem o que fazer !",

  "permissions": [
    "webRequest",
    "webNavigation",
    "tabs",
    "management",
    "scripting"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "128": "ativo.png"
    }
  }
}
